block variables
  - title = 'News'

extends /layout-platform

block content
  if prev
    p
      a(href=prev) << Newer

  if next
    p
      a(href=next) Older >>

  .row
    .small-12.columns
      h1= title

      ul
        each article in news.results
          li
            a(href='/news/'+article.getText('news.slug'))
              .marker
              img(src=article.getImage('news.image').views['homepage'].url)
              !=article.getStructuredText('news.shortlede').asHtml()

