block variables
  - title = 'Natural Farming - Mob Grazing'
  - metaDesc = "Our life dedication and devotion is to educate ranchers to be more successful in natural farming through managing their land holistically. Check out The Savory Institute's news updates to learn more about Mob Grazing and what we can provide for you."

extends /layout-platform

block content

  section.main
    .row
      .small-12.columns
        h1= title

        ul.news-archives
          each article in news.results
            li
              .row
                .large-3.medium-5.columns.hide-for-small-only
                  a(href='/news/'+article.getText('news.slug'))
                    img(src=article.getImage('news.image').views['homepage'].url)
                .large-9.medium-7.columns
                  h2= article.getText('news.title')
                  - date = momentDate(article.getDate('news.date'))
                    .date
                      =date.format('MMM DD, YYYY')
                  if article.getStructuredText('news.shortlede')
                    !=article.getStructuredText('news.shortlede').asHtml()
                  a.button.small(href='/news/'+article.getText('news.slug')) Read Full Article
                  

    .row.prev-next
      .small-6.columns
        if next
          p: a.btn-primary(href=next)
            i.fa.fa-backward 
            | Older
      
      .small-6.columns
        if prev
          p.newer: a.btn-primary(href=prev) 
            | Newer
            i.fa.fa-forward 
