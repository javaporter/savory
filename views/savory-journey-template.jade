block variables
	- title = 'Savory Institute'
	- fbURL = fbURL
	- fbImage = fbImage


extends /layout-savory-journeys

block content
	#overview(data-magellan-destination='overview')
	section.overview(style="background-image: url('#{headerPicture}');")

	section.main.savory-journey-template
		h1 #{journeyTitle}
		h3 #{journeySubtitle}
		h3 #{journeyDate}
		p #{journeyDescription}
		if highlights
			h3 #{highlights}
			ul.highlights
				each val in highlightText
					li= val
		if itinTitle
			h3 #{itinTitle}
			each val in itinerary
				h5(style="clear: both")= val.title
				p
					if val.image
						img(src=val.image.src align=val.image.align style="margin-left: 10px; margin-right: 10px;")
					!{val.text}
					
		if costTitle
			h3 #{costTitle}
			each val in costText
				p !{val}
		if expectTitle
			h3 #{expectTitle}
			each val in expectText
				h5= val[0]
				p !{val[1]}
		if questionsTitle
			h3 #{questionsTitle}
			each val in questionsText
				p !{val}
			a.button.small(href='/assets/docs/terms-and-conditions-for-journey-participants.pdf') Terms and Conditions		
		h3 #{journeyAvailability}
		if( journeyAvailability == 'Now Open' && journeyTitle != 'Grassland Patagonian Journey')
			a.btn-primary(href='http://savory-institute.myshopify.com/collections/savory-journeys') Find Tickets
		else if (journeyTitle == 'Grassland Patagonian Journey')
			a.btn-primary(href='http://savory-institute.myshopify.com/collections/savory-journeys/products/savory-journey-grassland-patagonian-argentina-december-2016?variant=18823338437') Find Tickets