block variables
  - title = 'Savory Journeys'

extends /layout-savory-journeys

block content
  #overview(data-magellan-destination='overview')
  section.overview

  section.half-color
    .art
    .color
    .row
      .medium-6.columns
        h1= title

      .medium-6.columns
        p Savory journeys explore the work of the global network of Savory hubs with a focus on educating and connecting visitors to the practices, learning, and success of holistic management throughout the world. 

  section.main
    .tech-platform-points
      .row()
        .medium-4.columns
          .panel()
            .panel-body
              header
                a(href='/savory-journeys/kenya')
                  img(src="/assets/images/Enonkishu Conservancy, MAASAI MARA, Last Line of Defence Trust 7.jpg")
                h3 Savory Journey to the Wild
              p Enonkishu Conservancy, Maasai Mara, Kenya
              footer
                p July 29 – August 7, 2016
                h4 Closed
                a.btn-primary(href='/savory-journeys/kenya') View Itinerary

        .medium-4.columns
          .panel()
            .panel-body
              header
                a(href='/savory-journeys/argentina')
                  img(src="/assets/images/Ovis-21-Argentina-Chile-Cover-1.jpg")
                h3 Grassland Patagonian Journey
                p Ovis 21, Argentina and Chile
              footer
                p December 9 – 18, 2016
                h4 Now Open
                a.btn-primary(href='/savory-journeys/argentina') View Itinerary

        .medium-4.columns
          .panel()
            .panel-body
              header
                a(href='/savory-journeys/zimbabwe')
                  img(src="/assets/images/ACHM-Zimbabwe-Cover-1.jpg")
                h3 Africa Centre for Holistic Management, Zimbabwe 
              footer
                p May 26 – June 4, 2017
                h4 Coming Soon
                a.btn-primary(href='/savory-journeys/zimbabwe') View Itinerary
